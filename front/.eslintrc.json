{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
//        "standard-with-typescript",
        "plugin:react/recommended",
        "airbnb",
        "airbnb/hooks",
        "airbnb-typescript",
        "prettier",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "prettier/prettier": ["error", {"endOfLine":  "auto"}],
        "import/no-extraneous-dependencies": "off",
        "react/react-in-jsx-scope": "off"
    }
}
